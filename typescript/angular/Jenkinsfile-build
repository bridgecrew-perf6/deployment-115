pipeline {
    agent any
       tools {
        nodejs 'nodejs'
    }
    parameters {
        booleanParam(name: 'DEPLOY', defaultValue: false, description: 'Deploy to npm')
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Install dependencies') {
            steps {
                sh 'npm install'
            }
        }
        stage('Lint') {
            steps {
                sh 'npm run lint'
            }
        }
        stage('Build') {
            steps {
                sh 'npm run build'
            }
        }
         stage('Deploy') {
            when {
                expression {
                    GIT_BRANCH = 'origin/' + sh(returnStdout: true, script: 'git rev-parse --abrevv-ref HEAD').trim()
                    
                    return GIT_BRANCH == 'origin/main' && params.DEPLOY == true
                }
            }
            steps {
                echo 'Deploying'
                sh 'npm run deploy'
            }
        }
    }
}
