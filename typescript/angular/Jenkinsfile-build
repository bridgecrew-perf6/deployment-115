pipeline {
    agent any
       tools {
        nodejs 'nodejs'
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'export chrome_bin=/chromium/latest && npm test'
            }
        }
    }
}
