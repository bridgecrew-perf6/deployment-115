pipeline {
    agent {
       docker {
                image 'node:lts-bullseye-slim'
                args '-p 3001:3000'
            }
    }
    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                sh 'npm install'
            }
        }
        stage('Test') {
            steps {
                sh 'ng test'
            }
        }
    }
}
